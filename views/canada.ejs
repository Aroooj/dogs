<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <title>Canadian Dogs</title>

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.5/examples/album/"
    />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />

    <link href="css/album.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('common/header'); -%>
<div class="container">
    
 <% if (message) {   %> 
  <div class="row justify-content-md-center">
    <div class="alert alert-primary" role="alert">
          <%= message %>
    </div>
  </div>
<% } %>

<h1 class="text-center"> Canadian Dogs  </h1>
<div class="col-md-12 col-md-offset-2  justify-content-center">

</div>
  
  <div class="col-md-12 col-md-offset-2">
  
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>Dog Name</th>
            <th>Country of Origin</th>
            <th>Fur colour</th>
            <th>Height</th>
            <th>Color of Eyes</th>
            <th>Longevity</th>
            <th>Character Traits</th>
            <th>Common Health Problems</th>
            <% if(user) { %>
            <th></th>
            <% } %>

        </tr>

        <%  
        
          dogs.forEach(dog => {
            
        %>
            <tr>
                <td><%=  dog.Dog_name  %></td>
                <td><%=  dog.Origin %></td>
                <td><%=  dog.Fur  %></td> 
                <td><%=  dog.Height  %></td> 
                <td><%=  dog.Color  %></td> 
                <td><%=  dog.Longevity  %></td> 
                <td><%=  dog.Traits  %></td> 
                <td><%=  dog.Health_Problems  %></td> 
                <% if(user) { %>
                <td class="text-center"><a class='btn btn-info btn-xs' href="/canada/update/<%= dog.id %>" ><span class="glyphicon glyphicon-edit"></span> Edit</a> 
                  <a  href="/canada/delete/<%= dog.id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete</a></td>       
                  <% } %>
                </tr>
            
         <%  
          });
         %>


       
    </thead>
          
    </table>

     
    </div>
    
  
    <%- include('common/footer') -%>
  </body>
</html>
